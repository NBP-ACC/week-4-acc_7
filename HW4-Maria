# import libraries
import os
import glob
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
sns.set()


#concatenate all csv files into one pandaDataframe
PATH = os.getcwd()+ "/Data"
all_files = glob.glob(os.path.join(PATH, "*.csv"))
df_concatenated  = pd.concat([pd.read_csv(f) for f in all_files],
 ignore_index=True)

print(df_concatenated)
